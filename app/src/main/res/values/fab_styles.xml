<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Стиль для круглих FloatingActionButton -->
    <style name="RoundFloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.RoundFAB</item>
        <item name="backgroundTint">?attr/colorButtonNormal</item>
        <item name="tint">@color/white</item>
    </style>

    <!-- Визначення круглої форми для FAB -->
    <style name="ShapeAppearance.RoundFAB" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>